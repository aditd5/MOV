<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.MOV</item>
    </style>

    <style name="TextAppearance.Title" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:font">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:font">@font/montserrat</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.Body">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BlueGreyButton" parent="">
        <item name="android:background">@drawable/btn_blue_grey</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="PinkButton" parent="BlueGreyButton">
        <item name="android:background">@drawable/btn_pink</item>
    </style>

    <style name="PinkButton.Stated" parent="BlueGreyButton">
        <item name="android:background">@drawable/ic_btn_background</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
    </style>

    <style name="BlueGreyButton.Small" parent="BlueGreyButton">
        <item name="android:background">@color/colorBlueGrey</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OutlinedButton" parent="BlueGreyButton">
        <item name="android:background">@drawable/outlined_rectangle_grey</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MaterialComponents.ShapeableImageView.Corner" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/background</item>
        <item name="android:background">@color/background</item>
    </style>

</resources>